<p id="notice"><%= notice %></p>

<p>
  <%= image_tag @customer.image_url(:thumb) if @customer.image? %>
</p>
<p>
  <strong>First name:</strong>
  <%= @customer.first_name %>
</p>

<p>
  <strong>Last name:</strong>
  <%= @customer.last_name %>
</p>

<p>
  <strong>Phone:</strong>
  <%= @customer.phone %>
</p>

<p>
  Projects: <%= @customer.projects.map(&:name).join(',') %>
</p>

<%= link_to 'Edit', edit_customer_path(@customer) %> |
<%= link_to 'Back', customers_path %>
